{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "builds": [
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/", "destination": "/public/index.html" },
    { "source": "/home", "destination": "/public/pages/home.html" },
    { "source": "/doctores", "destination": "/public/pages/doctores.html" },
    { "source": "/sensoformulario", "destination": "/public/pages/sensoformulario.html" },
    { "source": "/busqueda", "destination": "/public/pages/busqueda.html" },
    { "source": "/Pages/:match*", "destination": "/public/pages/:match*" },
    { "source": "/Img/:match*", "destination": "/public/img/:match*" }
  ]
}
