{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "builds": [
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/", "dest": "/public/index.html" },
    { "src": "/pages/(.*)", "dest": "/public/pages/$1" },
    { "src": "/Pages/(.*)", "dest": "/public/pages/$1" }
  ]
}
